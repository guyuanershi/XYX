<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000">

   <TextView
       		 android:id="@+id/titleAstroMore"
             android:layout_width="fill_parent"
             android:layout_height="100dp"
             android:background="#FFFFFF"
             android:gravity="center"
             android:textColor="#000000"
             android:textSize="50sp"
       android:textStyle="bold" />
<ScrollView 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
   <TableLayout
       android:layout_width="fill_parent" 
       android:layout_height="fill_parent"
       android:gravity="fill_vertical" >
      <TableRow android:layout_marginRight="10dip"> 
		<TextView 
		    android:id="@+id/summary"
	        android:text="整体运势" 
	        android:padding="3dip" /> 
	     <RatingBar
	         android:id="@+id/ratingbarSummary"
	         style="?android:attr/ratingBarStyleSmall"
	         android:layout_gravity="left|center"
	         android:layout_marginLeft="10dip"
	         android:numStars="5"
	         android:stepSize="1" />
	 </TableRow>
	 <TableRow android:layout_marginRight="10dip"> 
		<TextView  android:padding="3dip" /> 
		<TextView 
		    android:id="@+id/summary_val"
	        android:text="整体运势描述" 
	        android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" 
	        /> 
	 </TableRow>
	 <TableRow>
	     	<TextView 
	        android:id="@+id/love"
	        android:text= "爱情运势"
	        android:padding="3dip" /> 
	 </TableRow>  
	 <TableRow> 
		<TextView 
	        android:id="@+id/withlove"
	        android:text= "有对象："
	        android:padding="3dip" /> 
	     <RatingBar
	         android:id="@+id/ratingbarWithLove"
	         style="?android:attr/ratingBarStyleSmall"
	         android:layout_gravity="left|center"
	         android:layout_marginLeft="10dip"
	         android:numStars="5"
	         android:stepSize="1" />
	 </TableRow>
	 <TableRow android:layout_marginRight="10dip"> 
		<TextView />
		<TextView 
		    android:id="@+id/withlove_val"
	        android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" /> 
	 </TableRow>
	 <TableRow> 
		<TextView 
	        android:id="@+id/nolove"
	        android:text= "无对象："
	        android:padding="3dip" /> 
	     <RatingBar
	         android:id="@+id/ratingbarNoLove"
	         style="?android:attr/ratingBarStyleSmall"
	         android:layout_gravity="left|center"
	         android:layout_marginLeft="10dip"
	         android:numStars="5"
	         android:stepSize="1" />
	 </TableRow>
	 <TableRow android:layout_marginRight="10dip"> 
		<TextView />
		<TextView 
		    android:id="@+id/nolove_val"
	        android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" /> 
	 </TableRow>
	 <TableRow> 
		<TextView 
	        android:id="@+id/health"
	        android:text= "健康运势"
	        android:padding="3dip" /> 
	    <RatingBar
	        android:id="@+id/ratingbarHealth"
	        style="?android:attr/ratingBarStyleSmall"
	        android:layout_gravity="left|center"
	        android:layout_marginLeft="10dip"
	        android:numStars="5"
	        android:stepSize="1" />
 	</TableRow>
 	<TableRow android:layout_marginRight="10dip"> 
		<TextView />
		<TextView 
		    android:id="@+id/health_val"
	        android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" /> 
	 </TableRow>

 	<TableRow> 
		<TextView 
	        android:id="@+id/workStudy"
	        android:text= "工作学业运"
	        android:padding="3dip" /> 
		<RatingBar
	        android:id="@+id/ratingbarWorkStudy"
	        style="?android:attr/ratingBarStyleSmall"
	        android:layout_gravity="left|center"
	        android:layout_marginLeft="10dip"
	        android:numStars="5"
	        android:stepSize="1" />
 	</TableRow>
 	<TableRow android:layout_marginRight="10dip"> 
		<TextView />
	    <TextView 
	        android:id="@+id/workStudy_val"
	        android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" /> 
	 </TableRow>
 	<TableRow> 
		<TextView 
	        android:id="@+id/sex"
	        android:text= "性欲指数"
	        android:padding="3dip" /> 
		<RatingBar
	        android:id="@+id/ratingbarSex"
	        style="?android:attr/ratingBarStyleSmall"
	        android:layout_gravity="left|center"
	        android:layout_marginLeft="10dip"
	        android:numStars="5"
	        android:stepSize="1" />
 	</TableRow>
 	<TableRow android:layout_marginRight="10dip"> 
		<TextView />
	    <TextView 
	        android:id="@+id/sex_val"
	        android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" /> 
	 </TableRow> 
	 <TableRow> 
		<TextView 
	        android:id="@+id/luckyday"
	        android:text= "红心日"
	        android:padding="3dip" />
		<TextView /> 
 	</TableRow>
 	<TableRow> 
		<TextView />
		<TextView 
	        android:id="@+id/luckyday_val"
	        android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" /> 
 	</TableRow>
 	<TableRow> 
		<TextView 
	        android:id="@+id/badday"
	        android:text= "黑梅日"
	        android:padding="3dip" /> 
	        <TextView />
 	</TableRow>
 	<TableRow> 
		<TextView />
		<TextView 
	        android:id="@+id/badday_val"
	        android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" /> 
 	</TableRow>
 	<TableRow> 
		<TextView 
	        android:id="@+id/tips"
	        android:text= "小提示"
	        android:padding="3dip" />
		<TextView /> 
 	</TableRow>
 	<TableRow> 
		<TextView />
		<TextView 
	        android:id="@+id/tips_val"
	        android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" /> 
 	</TableRow>      
   </TableLayout>
</ScrollView>
</LinearLayout>
