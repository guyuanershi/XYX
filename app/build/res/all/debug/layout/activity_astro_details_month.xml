<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/titleAstroMore"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold" />
<ScrollView 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
<TableLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TableRow android:layout_marginRight="10dip"> 
		<TextView 
		    android:id="@+id/summary"
	        android:text="@string/total_fortune_2"
	        android:padding="3dip" /> 
	     <RatingBar
	         android:id="@+id/ratingbarSummary"
	         style="?android:attr/ratingBarStyleSmall"
	         android:layout_gravity="left|center"
	         android:layout_marginLeft="10dip"
	         android:numStars="5"
	         android:stepSize="1" />
 
	</TableRow>
	<TableRow> 
		<TextView /> 
		<TextView 	 android:id="@+id/summary_val"      
		    android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" ></TextView>
 	</TableRow>
 	<TableRow android:layout_marginRight="10dip"> 
		<TextView 
		    android:id="@+id/love"
	        android:text="@string/love_fortune"
	        android:padding="3dip" /> 

	     <RatingBar
	         android:id="@+id/ratingbarLove"
	         style="?android:attr/ratingBarStyleSmall"
	         android:layout_gravity="left|center"
	         android:layout_marginLeft="10dip"
	         android:numStars="5"
	         android:stepSize="1" />
 
	</TableRow>
	<TableRow> 
		<TextView /> 
		<TextView 	 android:id="@+id/love_val"      
		    android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" ></TextView>
 	</TableRow>   
	<TableRow> 
		<TextView 
	        android:id="@+id/Money"
	        android:text= "@string/finance_2"
	        android:padding="3dip" /> 

	     <RatingBar
	         android:id="@+id/ratingbarMoney"
	         style="?android:attr/ratingBarStyleSmall"
	         android:layout_gravity="left|center"
	         android:layout_marginLeft="10dip"
	         android:numStars="5"
	         android:stepSize="1" />

	</TableRow> 
	<TableRow> 
		<TextView /> 
		<TextView 	 android:id="@+id/Money_val"      
		    android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" ></TextView>
 	</TableRow> 
	<TableRow> 
		<TextView 
	        android:id="@+id/release"
	        android:text= "@string/release"
	        android:padding="3dip" /> 
		<TextView></TextView>
	</TableRow> 
	<TableRow> 
		<TextView  /> 
		<TextView 	 android:id="@+id/releaseWay_val"      
		    android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" ></TextView>
 	</TableRow> 
	<TableRow> 
		<TextView 
	        android:id="@+id/luckyTips"
	        android:text= "@string/tips"
	        android:padding="3dip" /> 
         <TextView  /> 
 	</TableRow>
 	<TableRow>
 	     <TextView  /> 
 	    <TextView 	 android:id="@+id/luckyTips_val"      
		    android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" ></TextView>
 	</TableRow> 
 	<TableRow> 
		<TextView 
	        android:id="@+id/luckyThing"
	        android:text= "@string/lucky_stuff"
	        android:padding="3dip" /> 
	        <TextView  /> 
 	</TableRow> 
 	<TableRow>
 	    <TextView  /> 
		<TextView 	 android:id="@+id/luckyThing_val"      
		    android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="10"
	        android:layout_marginLeft="10dip" ></TextView>
 	</TableRow>
</TableLayout>
</ScrollView>
</LinearLayout>
